@model List<Where2PayLogin.Models.Biller>

<h1>Biller List</h1>
<h4>This page is for Managing Billers</h4>

@if (Model.Count == 0)
{
    <p><h2>No billers yet!</h2></p>
}

<table class="table">

    <tr>
        <th>Biller</th>
        <th>Customer Service Phone Number</th>
        <th></th>
    </tr>

    @foreach (var biller in Model)
    {
        <tr>
            <td>@biller.Name</td>
            <td>@biller.Phone</td>
            <td><a asp-controller="Biller" asp-action="ViewBiller" asp-route-id=@biller.ID>View @biller.Name Agents</a></td>
        </tr>
    }
</table>

<p><a asp-area="" asp-controller="Biller" asp-action="Add">Add Biller</a></p>
<p><a asp-area="" asp-controller="Biller" asp-action="Remove">Edit or Remove Biller</a></p>