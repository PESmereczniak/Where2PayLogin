@model Where2PayLogin.ViewModels.ViewBillerViewModel

<h1>@Model.Biller.Name</h1>

<table>
    <tr>
        <td><b>Phone Number</b></td>
        <td>@Model.Biller.Phone</td>
    </tr>
    <tr>
        <td><b>Email</b></td>
        <td>@Model.Biller.Email</td>
    </tr>
    <tr>
        <td><b>Website</b></td>
        <td>@Model.Biller.Web</td>
    </tr>
    <tr>
        <td><b>Available Locations</b></td>
        <td>
            @foreach (var billersAgent in Model.Agents)
            {
            <p><a asp-controller="Agent" asp-action="ViewAgent" asp-route-id=@billersAgent.AgentID>@billersAgent.Agent.Name</a></p>
            }
        </td>
    </tr>
</table>